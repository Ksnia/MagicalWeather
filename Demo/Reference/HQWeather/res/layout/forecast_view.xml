<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    
    <TextView
        android:id="@+id/forecast_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:textSize="@dimen/forecast_weekdy_text_size" >
    </TextView>
    
   <ImageView
       android:id="@+id/forecast_weather_view"
       android:layout_width="@dimen/forecast_view_width"
       android:layout_height="@dimen/forecast_view_width"
       android:contentDescription="@string/app_name"
       android:scaleType="centerCrop"
       android:background="@drawable/forecast_bg"
       android:src="@drawable/weather_na" >
   </ImageView>
   
    <TextView
        android:id="@+id/forecast_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/dark"
        android:textSize="@dimen/forecast_tem_text_size" >
    </TextView>
</LinearLayout>
